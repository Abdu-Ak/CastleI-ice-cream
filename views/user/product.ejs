<!DOCTYPE html>
<html lang="en">

    <%- include ('../partials/head.ejs') %>

<body>
    <%- include ('../partials/userNav.ejs') %>


    <!-- Header Start -->
    <div class="jumbotron jumbotron-fluid page-header" style="margin-bottom: 90px;">
        <div class="container text-center py-5">
            <h1 class="text-white display-3 mt-lg-5">Product</h1>
            <div class="d-inline-flex align-items-center text-white">
                <p class="m-0"><a class="text-white" href="">Home</a></p>
                <i class="fa fa-circle px-3"></i>
                <p class="m-0">Product</p>
            </div>
        </div>
    </div>
    <!-- Header End -->


    <!-- Products Start -->
    <div class="container-fluid py-5">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <h1 class="section-title position-relative text-center mb-5">Best Prices We Offer For Ice Cream Lovers</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-12 text-center">
                    <ul class="list-inline mb-4 pb-2" id="portfolio-flters">
                        <li class="btn btn-sm btn-outline-primary m-1 active"  data-filter="*">All</li>
                        <% categories.forEach((categories)=>{%>
                        <a href="/filter/<%= categories._id %>"><li class="btn btn-sm btn-outline-primary m-1" data-filter=".second"><%= categories.Category %></li></a>
                        <%})%>
                    </ul>
                </div>
            </div>
            <div class="row">
                <% products.forEach((products)=>{ %>
                <div class="col-lg-3 col-md-6 mb-4 pb-2">
                    <div class="product-item d-flex flex-column align-items-center text-center bg-light rounded py-5 px-3">
                        <div class="bg-primary mt-n5  py-3" style="width: 80px;">
                            <h4 class="font-weight-bold text-white mb-0"><span class="fa fa-indian-rupee-sign"></span><%= products.price%></h4>
                        </div>
                        <div class="position-relative bg-primary rounded-circle mt-n3 mb-4 p-3" style="width: 150px; height: 150px;">
                            <img class="rounded-circle w-100 h-100" src="/public/productIMG/<%=products._id%>.jpg" style="object-fit: cover;">
                        </div>
                        <h5 class="font-weight-bold mb-4"> <%= products.productName %></h5>
                        <% if (user){%>
                        <a href="/productView/<%= products._id %>" class="btn btn-sm btn-secondary">Order Now</a>
                        <%}else{%>
                            <a href="/login" class="btn btn-sm btn-secondary">Order Now</a>
                            <%}%>
                    </div>
                </div>
                <% })%>
               
              
            </div>
        </div>
    </div>
    <!-- Products End -->

    <%- include ('../partials/userFooter.ejs') %>
    <%- include ('../partials/footerLink.ejs') %>
</body>

</html>