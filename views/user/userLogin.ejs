<!DOCTYPE html>
<html lang="en">
  <%- include ('../partials/head.ejs') %>
  <body>
    <%- include ('../partials/loginNav.ejs') %>
    <section class="vh-100">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-2-strong" style="border-radius: 1rem">
              <div class="card-body p-5 text-center">
                <h3 class="mb-5">Log In</h3>

                <% if(locals.err_msg) { %>
                <p class="text-danger"><%= err_msg %></p>
                <% } %>

                <form action="/doLogin" method="post" id="form" role="form">
                  <div class="form-outline mb-4">
                    <input
                      type="text"
                      id="typeEmailX-2"
                      name="details"
                      class="form-control form-control-lg text-center"
                      placeholder="Email or phone"
                    />
                  </div>

                  <div class="form-outline mb-4">
                    <input
                      type="password"
                      id="typePasswordX-2"
                      name="password"
                      class="form-control form-control-lg text-center"
                      placeholder="password"
                    />
                  </div>

                  <div class="login d-flex justify-content-center">
                    <button
                      class="btn btn-primary btn-lg btn-block w-50"
                      type="submit"
                    >
                      Login
                    </button>
                  </div>
                </form>

                <hr class="my-4" />
                <label for="">Don't have account?</label>
                <a href="/Signup">Register</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <%- include ('../partials/footerLink.ejs') %>
  </body>
</html>
