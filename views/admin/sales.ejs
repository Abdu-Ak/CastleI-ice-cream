<!DOCTYPE html>
<html lang="en">
  <body>
    <%- include ('../partials/head.ejs') %> <%- include
    ('../partials/adminNav.ejs') %>
    <div class="content-wrapper">
      <div class="container-fluid">
        <div class="ml-lg-5 mt-5">
          <form action="/admin/salesFilter" method="post" class="d-flex">
            <div class="justify-content-center">
              <label for="from">From:</label>
              <input type="date" name="from" class="form-control" />
            </div>
            <div class="justify-content-center ml-2">
              <label for="to">To:</label>
              <input type="date" name="to" class="form-control" />
              <div class="pl-lg-5">
               
                <button
                  type="submit "
                  class="btn btn-outline-light mt-3 ml-lg-5"
                  style="border-radius: 10px; background-color: #868e95;"
                >
                  <span class="fa fa-search"></span>
                </button>
               
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="card mt-5">
        <div class="card-header d-flex justify-content-between">
          <div><i class="fa fa-table mr-1"></i>SALES REPORTS</div>
          <div>
          
                <form action="/admin/downSales" method="post">
                    <% if (date !== 0){%>
                    <input type="date" name="from" value="<%=date.from%>" hidden>
                    <input type="date" name="to" value="<%=date.to%>" hidden>
                    <%}%>
            <button
              type="submit"
              class="btn btn-outline-success"
              style="border-radius: 10px; border-width: 0;"
            >
              <span class="fa fa-download"></span>
            </button>
           
          </div>
        </div>
        <div class="d-flex justify-content-center"></div>
        <div class="card-body">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="Table"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
                    SI NO
                  </th>
                  <th class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
                    ORDER ID
                  </th>
                  <th class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
                    CUSTOMER
                  </th>
                  <th class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
                    AMOUNT
                  </th>
                  <th class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
                    STATUS
                  </th>
                </tr>
              </thead>

              <tbody>
                <% orderData.forEach((order,index)=>{ %>
                <tr>
                  <td class="col-3 col-md-3 col-lg-3 col-xl-2 text-center">
                    <%= index + 1 %>
                  </td>
                  <td class="col-3 col-md-3 col-lg-3 col-xl-2 text-center">
                    <%= order._id %>
                  </td>
                  <td class="col-3 col-md-3 col-lg-3 col-xl-2 text-center">
                    <%= order.address.fullname %>
                  </td>
                  <td class="col-3 col-md-3 col-lg-3 col-xl-2 text-center">
                    <%= order.totalAmount %>
                  </td>
                  <td class="col-3 col-md-3 col-lg-3 col-xl-2 text-center">
                    <%= order.orderStatus %>
                  </td>
                </tr>
                <%})%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <%- include ('../partials/footerLink.ejs') %>
    <script>
      $(document).ready(function () {
        $("#Table").DataTable();
      });
    </script>
  </body>
</html>
