<!DOCTYPE html>
<html lang="en">
  <body>
    <%- include ('../partials/head.ejs') %> <%- include
    ('../partials/adminNav.ejs') %>

    <div class="wrapper d-flex">
      <nav id="sidebar" class="bg-primary vh-100 justify-content-start">
        <div class="p-4">
          <ul class="list-unstyled components mt-5">
            <li class="active">
              <a href="#" class="text-white"
                ><i class="fa fa-dashboard mr-2"></i> Dashboard</a
              >
              <hr />
            </li>
            <li>
              <a href="/admin/orders" class="text-white"
                ><i class="fa fa-list mr-2"></i>Orders</a
              >
              <hr />
            </li>
            <li>
              <a href="/admin/category" class="text-white"
                ><i class="fa fa-list mr-2"></i>Category</a
              >
              <hr />
            </li>
            <li>
              <a href="/admin/coupon" class="text-white"
                ><i class="fa fa-list mr-2"></i>coupen</a
              >
              <hr />
            </li>
            <li>
              <a href="/admin/products" class="text-white"
                ><span class="fa fa-cart-shopping mr-2"></span> products</a
              >
              <hr />
            </li>
            <li>
              <a href="/admin/getAddproduct" class="text-white"
                ><span class="fa fa-cart-plus mr-2"></span> Add Product</a
              >
              <hr />
            </li>
            <li>
              <a href="/admin/getusers" class="text-white"
                ><span class="fa fa-user mr-2"></span> Users</a
              >
              <hr />
            </li>

            <li>
              <a href="/admin/adminlogout" class="text-white"
                ><span class="fa fa-right-from-bracket mr-2"></span> Logout</a
              >
              <hr />
            </li>
          </ul>
        </div>
      </nav>

      <section class="mt-5 pt-5 pl-5 ml-5">
        <div class="d-flex justify-content-end">
          <button
            type="button"
            class="btn btn-outline-success mt-5 mb-5"
            data-bs-toggle="modal"
            data-bs-target="#addcoupen"
          >
            Add<span class="fa fa-plus ml-1"></span>
          </button>
        </div>
        <div class="d-flex justify-content-center">
          <% if(locals.err_msg) { %>
          <p class="text-danger"><strong><%= err_msg %></strong></p>
          <% } %>
        </div>
        <table id="Table" class="table mt-5 table-hover ml-5 table-light">
          <thead>
            <tr>
              <th class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
                SI NO
              </th>
              <th class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
                COUPEN
              </th>
              <th class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
                DISCOUNT
              </th>
              <th class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
                EXPIRY DATE
              </th>

              <th class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
                OPTIONS
              </th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% coupons.forEach((coupons , index)=>{ %>
              <td class="col-3 col-md-3 col-lg-3 col-xl-2 text-center">
                <%= index + 1 %>
              </td>
              <td class="col-3 col-md-3 col-lg-3 col-xl-2 text-center">
                 <%=coupons.couponName %>
              </td>
              <td class="col-3 col-md-3 col-lg-3 col-xl-2 text-center">
                <%=coupons.discount %>
              </td>
              <td class="col-3 col-md-3 col-lg-3 col-xl-2 text-center">
                <%=coupons.expiryDate %>
              </td>

              <td class="col-3 col-md-3 col-lg-3 col-xl-2 text-center">
                  <!-- edit modal -->
                  <div class="d-flex ml-5">
                    <button
                    type="button"
                    class="btn btn-outline-info d-flex"
                    data-bs-toggle="modal"
                    data-bs-target="#staticBackdrop-<%= coupons._id %>  "
                    
                  >
                  <span class="fa fa-pen-to-square mt-1 mr-1"></span>
                  </button>
                  <div
                    class="modal fade"
                    id="staticBackdrop-<%= coupons._id %>"
                    data-bs-backdrop="static"
                    data-bs-keyboard="false"
                    tabindex="-1"
                    aria-labelledby="staticBackdropLabel"
                    aria-hidden="true"
                  >
                    <div class="modal-dialog modal-dialog-centered">
                      <div class="modal-content">
                        <form
                          action="/admin/editCoupon/<%= coupons._id %>"
                          method="post"
                        >
                          <div class="modal-header">
                            <h5 class="modal-title" id="staticBackdropLabel">
                              Edit Coupon
                            </h5>
                          </div>
                          <div class="mb-3">
                            <label
                              for="recipient-name"
                              name="orderStatus"
                              class="col-form-label"
                            >
                              Coupon 
                            </label>
                           <div class="d-flex justify-content-center">
                            <input
                            type="text"
                            class="form-control"
                            id="coupon"
                            name="coupon"
                            value=" <%=coupons.couponName %>"

                            style="width: 80%;"
                            
                          />
                           </div>
                              
                          
                          </div>
                          <div class="mb-3">
                            <label
                              for="message-text"
                              name="paymentStatus"
                              class="col-form-label"
                              >Discount (in %)</label
                            >
                          <div class="d-flex justify-content-center">
                            <input
                            type="number"
                            class="form-control"
                            id="discount"
                            name="discount"
                            value="<%= coupons.discount %>"
                            aria-describedby="emailHelp"
                            style="width: 80%;"
                            
                          />
                          </div>
                          </div>
                          <div class="mb-3">
                            <label
                              for="message-text"
                              name="paymentStatus"
                              class="col-form-label"
                              >Max limit (in RS)</label
                            >
                            <div class="d-flex justify-content-center">
                              <input
                              type="number"
                              class="form-control"
                              id="maxlimit"
                              name="maxlimit"
                              value="<%=coupons.maxLimit %>"
                              style="width: 80%;"
                            />
                            </div>
                          </div>
                          <div class="mb-3 ">
                            <label
                              for="message-text"
                              name="paymentStatus"
                              class="col-form-label"
                              >Expiry Date</label
                            >
                           <div class="d-flex justify-content-center">
                            <input
                            type="date"
                            class="form-control"
                            id="expirydate"
                            name="expirydate"
                            value="<%=coupons.expiryDate %>"
                            style="width: 80%;"
                          />
                           </div>
                          </div>
                          <div class="modal-footer">
                            <button
                              type="button"
                              class="btn btn-secondary"
                              data-bs-dismiss="modal"
                              style="background-color: rgba(0, 0, 0, 0.696);"
                            >
                              Close
                            </button>
                            <button
                              type="submit"
                              value="submit"
                              class="btn btn-info"
                            
                            >
                              Confirm
                            </button>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                  <!-- edit moda end -->
              
                
 <!-- delete modal -->
 <button
 type="button"
 class="btn btn-outline-danger d-flex ml-3"
 data-bs-toggle="modal"
 data-bs-target="#delete-<%=coupons._id%>"
>
 <span class="fa fa-trash mt-1 mr-1"></span>
</button>

 <div
 class="modal fade"
 id="delete-<%=coupons._id%>"
 tabindex="-1"
 aria-labelledby="exampleModalLabel"
 aria-hidden="true"
>
 <div class="modal-dialog">
   <div class="modal-content">
     <div class="modal-header">
       <h1 class="modal-title fs-5" id="exampleModalLabel">
         CONFIRMATION
       </h1>
       <button
         type="button"
         class="btn-close"
         data-bs-dismiss="modal"
         aria-label="Close"
       ></button>
     </div>
     <div class="modal-dialog">
       Are you confirm ?
     </div>
     <div class="modal-footer">
       <button
         type="button"
         class="btn btn-secondary"
         data-bs-dismiss="modal"
         style="background-color: rgba(0, 0, 0, 0.696);"
       >
         Close
       </button>
       <a href="/admin/deleteCoupon/<%=coupons._id%>"
         ><button type="button" class="btn btn-danger">
           Delete
         </button></a
       >
     </div>
   </div>
 </div>
</div>

<!-- delete modal end -->
                
              </td>
             
            </tr>
            <% }) %>
          </tbody>
        </table>
           
 

        <!-- add modal -->
        <div
          class="modal fade"
          id="addcoupen"
          tabindex="-1"
          aria-labelledby="exampleModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Add</h1>
              </div>
              <div class="modal-body">
                <form action="/admin/addCoupon" method="post">
                  <div class="mb-3">
                    <label
                      for="recipient-name"
                      name="orderStatus"
                      class="col-form-label"
                    >
                      Coupon 
                    </label>
                    <input
                      type="text"
                      class="form-control"
                      id="coupon"
                      name="coupon"
                      
                      
                    />
                  </div>
                  <div class="mb-3">
                    <label
                      for="message-text"
                      name="paymentStatus"
                      class="col-form-label"
                      >Discount (in %)</label
                    >
                    <input
                      type="number"
                      class="form-control"
                      id="discount"
                      name="discount"
                    
                      
                    />
                  </div>
                  <div class="mb-3">
                    <label
                      for="message-text"
                      name="paymentStatus"
                      class="col-form-label"
                      >Max limit (in RS)</label
                    >
                    <input
                      type="number"
                      class="form-control"
                      id="maxlimit"
                      name="maxlimit"
                    
                      
                    />
                  </div>
                  <div class="mb-3">
                    <label
                      for="message-text"
                      name="paymentStatus"
                      class="col-form-label"
                      >Expiry Date</label
                    >
                    <input
                      type="date"
                      class="form-control"
                      id="expirydate"
                      name="expirydate"
                    
                      
                    />
                  </div>
                  <div class="modal-footer">
                    <button
                      type="button"
                      class="btn btn-dark"
                      data-bs-dismiss="modal"
                    >
                      Close
                    </button>
                    <button
                      type="submit"
                      value="submit"
                      class="btn btn-success"
                    >
                      confirm
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- add modal end -->
      </section>
    </div>
    <%- include ('../partials/footerLink.ejs') %>
    <script>
      $(document).ready(function () {
        $("#Table").DataTable();
      });
    </script>
  </body>
</html>
